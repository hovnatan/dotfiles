{
  "coc.preferences.formatOnSaveFiletypes": ["python", "c", "cpp", "cuda", "javascript", "xhtml", "html", "css", "Markdown", "lua"],
  "coc.preferences.jumpCommand": "edit",
  "diagnostic.maxWindowHeight": 25,
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": [
				"--fallback-style=Google",
        "--compile-commands-dir=build",
        "--compile_args_from=filesystem",
        "--all-scopes-completion",
        "--background-index",
        "--clang-tidy",
        "--completion-parse=always",
        "--completion-style=detailed",
        "--function-arg-placeholders",
        "--header-insertion-decorators",
        "--query-driver=/usr/bin/**/clang-*",
        "--header-insertion=never",
        "--cross-file-rename",
        "--limit-results=0",
        "-j=6",
        "--pch-storage=memory"
      ],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "filetypes": ["c", "cpp", "cc", "objc", "h", "hpp", "objcpp", "cuda"]
    },
    "digestif": {
      "command": "digestif",
      "filetypes": ["tex", "plaintex", "context"]
    }
  },
  "html.filetypes":["html", "handlebars", "xhtml"],
  "python.linting.pylintUseMinimalCheckers" : true,
  "python.linting.pylintArgs": ["--generated-members=numpy.* ,torch.* ,cv2.* , cv.*, sh.*",
    "--disable=C0103,C0111,C0301,C0330,R0902,R0903,R0912,R0913,R0914,R0915,W1510"],
  "python.formatting.provider" : "yapf",
  "python.formatting.yapfArgs" : ["--style=facebook"],
  "python.autoComplete.showAdvancedMembers" : false,
  "python.terminal.activateEnvironment" : false,
  "python.jediEnabled": true,
  "git.enableGlobalStatus": false,
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "diagnostic.warningSign": ">>",
  "git.enableGutters": true,
  "coc.source.issues.enable": false,
  "coc.source.word.filetypes": ["text", "html", "markdown"],
  "suggest.detailMaxLength": 200,
  "list.insertMappings": {
    "<C-s>": "action:vsplit",
    "<C-w>": "command:wincmd k",
    "<C-v>": "eval:@@"
  },
  "list.source.grep.args": ["-S"]
}
