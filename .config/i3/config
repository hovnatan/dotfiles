exec --no-startup-id ~/.dotfiles/monitor.sh a

set $mod Mod1

font pango:DejaVu Sans Mono 10

floating_modifier Mod1

bindsym Mod1+Return exec ~/.dotfiles/.config/i3/terminal.sh

# kill focused window # Alt+Shift+q, Win+d
bindcode Mod1+Shift+24 kill; exec --no-startup-id ~/.dotfiles/.config/i3/tmux_kill.sh
bindcode Mod4+40 kill; exec --no-startup-id ~/.dotfiles/.config/i3/tmux_kill.sh

# start run (a program launcher), 40=d
bindcode Mod1+40 exec rofi -show combi
bindcode Mod1+Shift+40 exec rofi -show drun

# change focus, h j k l
bindcode Mod1+43 focus left
bindcode Mod1+44 focus down
bindcode Mod1+45 focus up
bindcode Mod1+46 focus right

# move focused window, h j k l
bindcode Mod1+Shift+43 move left
bindcode Mod1+Shift+44 move down
bindcode Mod1+Shift+45 move up
bindcode Mod1+Shift+46 move right

# alternatively, you can use the cursor keys:
bindsym Mod1+Shift+Left move left
bindsym Mod1+Shift+Down move down
bindsym Mod1+Shift+Up move up
bindsym Mod1+Shift+Right move right

# 55=v, 41=f
bindcode $mod+Shift+55 split h
bindcode $mod+55 split v
bindcode $mod+41 fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindcode $mod+39 layout stacking
bindcode $mod+25 layout tabbed
bindcode $mod+26 layout toggle split

# toggle tiling / floating
bindsym Mod4+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym Mod4+space focus mode_toggle
bindcode $mod+38 focus parent
bindcode $mod+52 focus child

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindcode $mod+10 workspace $ws1
bindcode $mod+11 workspace $ws2
bindcode $mod+12 workspace $ws3
bindcode $mod+13 workspace $ws4
bindcode $mod+14 workspace $ws5
bindcode $mod+15 workspace $ws6
bindcode $mod+16 workspace $ws7
bindcode $mod+17 workspace $ws8
bindcode $mod+18 workspace $ws9
bindcode $mod+19 workspace $ws10
bindcode $mod+49 exec --no-startup-id ~/.dotfiles/.config/i3/grave.sh

# move focused container to workspace
bindcode $mod+Shift+10 move container to workspace $ws1
bindcode $mod+Shift+11 move container to workspace $ws2
bindcode $mod+Shift+12 move container to workspace $ws3
bindcode $mod+Shift+13 move container to workspace $ws4
bindcode $mod+Shift+14 move container to workspace $ws5
bindcode $mod+Shift+15 move container to workspace $ws6
bindcode $mod+Shift+16 move container to workspace $ws7
bindcode $mod+Shift+17 move container to workspace $ws8
bindcode $mod+Shift+18 move container to workspace $ws9
bindcode $mod+Shift+19 move container to workspace $ws10

bindsym Mod4+Right workspace next
bindsym Mod4+Left workspace prev

bindcode $mod+Shift+54 reload
bindcode $mod+Shift+27 restart
bindcode $mod+Shift+26 exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

mode "resize" {
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindcode $mod+27 mode "resize"

mode "move" {
        bindsym --release h exec --no-startup-id xdotool key Left
        bindsym --release j exec --no-startup-id xdotool key Down
        bindsym --release k exec --no-startup-id xdotool key Up
        bindsym --release l exec --no-startup-id xdotool key Right

        bindsym --release Shift+h exec --no-startup-id xdotool key Left Left
        bindsym --release Shift+j exec --no-startup-id xdotool key Down Down
        bindsym --release Shift+k exec --no-startup-id xdotool key Up Up
        bindsym --release Shift+l exec --no-startup-id xdotool key Right Right

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+m mode "move"

# set primary gruvbox colorscheme colors
set $bg #1d2021
set $red #fb4934
set $green #b8bb26
set $yellow #fabd2f
set $blue #83a598
set $purple #d3869b
set $aqua #8ec07c
set $gray #a89984
set $darkgray #1d2021
set $white #ebdbb2

bar {
        status_command SCRIPT_DIR=~/.config/i3blocks i3blocks
        position top
        font pango:DejaVu Sans Mono, Awesome 11
        colors {
          background $bg
          statusline $yellow
          #                    border  backgr. text
          focused_workspace    $aqua $aqua $darkgray
          inactive_workspace   $darkgray $darkgray $yellow
          active_workspace     $darkgray $darkgray $yellow
          urgent_workspace     $red $red $bg
      	}
}

# green gruvbox
# class                 border|backgr|text|indicator|child_border
client.focused          $green $green $darkgray $purple $yellow
client.focused_inactive $darkgray $darkgray $yellow $purple $darkgray
client.unfocused        $darkgray $darkgray $yellow $purple $darkgray
client.urgent           $red $red $white $red $red

hide_edge_borders smart
default_border pixel 1 

bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

## Volume control
set $volumepath ~/.dotfiles/i3-volume
set $volumestep 5

bindsym XF86AudioRaiseVolume exec --no-startup-id $volumepath/volume -y -np -i $volumestep ; exec --no-startup-id pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id $volumepath/volume -y -np -d $volumestep; exec --no-startup-id pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute        exec --no-startup-id $volumepath/volume -y -mn; exec --no-startup-id pkill -RTMIN+10 i3blocks

bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

bindsym $mod+Tab workspace back_and_forth
bindsym $mod+Escape exec ~/.dotfiles/lock.sh dummy
bindsym $mod+Shift+Escape exec ~/.dotfiles/lock.sh && systemctl suspend
exec --no-startup-id setxkbmap -layout "us,am" -variant ",phonetic-alt" -option "ctrl:nocaps"
exec --no-startup-id dropbox start
exec --no-startup-id redshift-gtk
exec --no-startup-id libinput-gestures
exec_always --no-startup-id ~/.config/i3/kbd.py
bindsym $mod+space exec --no-startup-id ~/.config/i3/key_layout_switch; exec --no-startup-id pkill -RTMIN+10 i3blocks

exec --no-startup-id workrave 
for_window [class="Workrave"] floating enable
exec --no-startup-id dbus-send --print-reply --dest=org.workrave.Workrave /org/workrave/Workrave/Core org.workrave.CoreInterface.SetOperationMode string:'normal'
bindcode $mod+Shift+25 exec --no-startup-id ~/.config/i3/workrave_toggle.sh
bindcode $mod+Shift+39  exec --no-startup-id ~/.config/i3/workrave_grb.sh

exec --no-startup-id dunst

exec --no-startup-id ~/.dotfiles/.config/i3/terminal.sh --name dropdown
for_window [instance="dropdown"] floating enable, move scratchpad
bindcode $mod+31 [instance="dropdown"] scratchpad show, move position center

bindsym Print exec --no-startup-id scrot -e 'mv $f /tmp/ && gimp /tmp/$f'
bindsym --release $mod+Sys_Req exec scrot -s -e 'mv $f /tmp/ && gimp /tmp/$f'
bindcode Mod4+33 exec --no-startup-id ~/.dotfiles/monitor.sh

bindcode $mod+Shift+20 move scratchpad
