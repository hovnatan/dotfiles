# set some nice colors      border     background  text
client.focused              $ac        $ac         $tx
client.unfocused            $bg        $bg         $ia
client.focused_inactive     $bg        $bg         $ac
client.urgent               $rd        $rd         $tx

hide_edge_borders smart
default_border pixel 1 

bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness

## Volume control
set $volumepath ~/i3-volume
set $statuscmd i3status
set $statussig SIGUSR1
set $volumestep 5
bindsym XF86AudioRaiseVolume exec --no-startup-id $volumepath/volume -y -np -i $volumestep -t $statuscmd -u $statussig; exec --no-startup-id pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id $volumepath/volume -y -np -d $volumestep -t $statuscmd -u $statussig; exec --no-startup-id pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute        exec --no-startup-id $volumepath/volume -y -mn -t $statuscmd -u $statussig; exec --no-startup-id pkill -RTMIN+10 i3blocks
bindsym $mod+Tab workspace back_and_forth
bindsym $mod+Escape exec ~/.dotfiles/lock.sh dummy
bindsym $mod+Shift+Escape exec ~/.dotfiles/lock.sh && systemctl suspend
exec --no-startup-id xautolock -time 5 -locker "~/.dotfiles/lock.sh dummy" -corners 0-00 -cornersize 3
exec --no-startup-id setxkbmap -layout "us,am" -variant ",phonetic-alt" -option "caps:ctrl_modifier"
exec --no-startup-id dropbox start
exec --no-startup-id redshift-gtk
exec_always --no-startup-id ~/.config/i3/kbd.py
bindsym $mod+space exec --no-startup-id ~/.config/i3/key_layout_switch; exec --no-startup-id pkill -RTMIN+10 i3blocks

exec --no-startup-id workrave 
for_window [class="Workrave"] border none
for_window [class="Workrave"] floating enable
exec --no-startup-id dunst

exec --no-startup-id termite --name dropdown
for_window [instance="dropdown"] floating enable, move scratchpad
bindsym $mod+i [instance="dropdown"] scratchpad show, move position center
for_window [instance="dropdown"] border normal

bindsym Print exec scrot -e 'mv $f /tmp/ && gimp /tmp/$f'
bindsym --release $mod+Sys_Req exec scrot -s -e 'mv $f /tmp/ && gimp /tmp/$f'
bindsym Mod4+p exec --no-startup-id ~/.dotfiles/monitor.sh
