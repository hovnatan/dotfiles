{
    "name": "hovnatan_dotfiles",
    "build": {
        "dockerfile": "Dockerfile"

    },
    // "postCreateCommand": "uv sync",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "charliermarsh.ruff"
            ]
        }
    },
    "mounts": [
        "source=profile_hovnatan_dotfiles,target=/root,type=volume",
        "target=/root/.vscode-server,type=volume",
        "target=/root/.cursor-server,type=volume",
        "source=/etc/localtime,target=/etc/localtime,type=bind,readonly"
    ]
}